{% extends "KjrbJugendstadtplanBundle:Layout:base.html.twig" %}

{% block title %}
    <h1>Ort erstellen</h1>
{% endblock %}

{% block content %}
    <form method="post" action="{{ path('kjrb_jugendstadtplan_ort_erstellen') }}">
        {{ form_row(form.titel) }}
        {{ form_row(form.beschreibung) }}

        <div class="big-map-container">
            <div data-ng-controller="OrtErstellenController" class="angular-leaflet-map">
                <leaflet markers="markers" defaults="defaults" center="center" markers="markers" event-broadcast="events"></leaflet>

                <div class="hidden">
                    <label for="kjrb_jugendstadtplanbundle_ort_longitude" class="required">Longitude</label>
                    <input type="text" id="kjrb_jugendstadtplanbundle_ort_longitude" name="kjrb_jugendstadtplanbundle_ort[longitude]" required="required" data-ng-model="markers[0].lng"/>
                </div>
                <div class="hidden">
                    <label for="kjrb_jugendstadtplanbundle_ort_latitude" class="required">Latitude</label>
                    <input type="text" id="kjrb_jugendstadtplanbundle_ort_latitude" name="kjrb_jugendstadtplanbundle_ort[latitude]" required="required" data-ng-model="markers[0].lat" />
                </div>
            </div>
        </div>
        {{ form_row(form.traeger) }}
        {{ form_row(form.speichern) }}
        {{ form_row(form._token) }}
    </form>
    <a href="{{ path('kjrb_jugendstadtplan_ort_index') }}" class="btn">abbrechen</a>
{% endblock %}